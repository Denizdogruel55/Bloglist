   @model Blog
   <div class="card mb-2">
        <div class="row">
            <div class="col-md-4">
                <img src="~/img/@Model.Images" class="img-fluid" alt="">
            </div>
            <div class="col-md-8">
                <h5 class="card-title"><a asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></h5>
                <p class="card-text">@Model.Content</p>
            </div>
        </div>
    </div>